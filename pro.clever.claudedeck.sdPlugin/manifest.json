{
	"$schema": "https://schemas.elgato.com/streamdeck/plugins/manifest.json",
	"UUID": "pro.clever.claudedeck",
	"Name": "Claude Deck",
	"Version": "0.1.0.0",
	"Author": "Clever.pro",
	"Description": "Reserve Stream Deck keys for Claude Code; show status; tap to clear.",
	"Category": "Claude Deck",
	"CategoryIcon": "imgs/plugin/category-icon",
	"Icon": "imgs/plugin/category-icon",
	"SDKVersion": 2,
	"Software": { "MinimumVersion": "6.6" },
	"Nodejs": { "Version": "20", "Debug": "enabled" },
	"OS": [
	  { "Platform": "mac", "MinimumVersion": "10.15" },
	  { "Platform": "windows", "MinimumVersion": "10" }
	],
	"CodePath": "bin/plugin.cjs",
	"Actions": [
	  {
		"UUID": "pro.clever.claudedeck.slot",
		"Name": "Session Slot",
		"Tooltip": "Shows Claude Deck session status; tap to clear",
		"Icon": "imgs/action-icon",
		"Controllers": ["Keypad"],
		"States": [
		  { "Image": "imgs/action-icon", "TitleAlignment": "bottom" }
		]
	  }
	]
  }